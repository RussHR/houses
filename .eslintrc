{
	"extends": [
		"airbnb",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"arrow-parens": [0, "as-needed"],
		"comma-dangle": ["error", "never"],
		"indent": ["error", "tab"],
		"jsx-a11y/label-has-associated-control": [0, {}], // failing due to bug
		"jsx-a11y/label-has-for": [0, {}],
		"no-tabs": 0,
		"object-curly-newline": [0, {}],
		"react/jsx-indent": [true, "tab"],
		"react/jsx-indent-props": [true, "tab"]
	},
	"settings": {
		"react": {
			"version": "16.8"
		}
	}
}
